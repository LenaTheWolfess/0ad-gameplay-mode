<?xml version="1.0" encoding="utf-8"?>
<object
	name="formationEntityPanel"
	size="0 86 50 93"
>
	<!-- Displays buttons for active formations -->
	<repeat count="19" var="n">
		<object name="formationEntityButton[n]" size="0 0 50 50" type="button" hidden="true" style="iconButton" tooltip_style="sessionToolTip">
			<object name="formationEntityImage[n]" size="5 5 100%-5 100%-5" type="image" ghost="true"/>
			<object name="formationEntityHitOverlay[n]" hidden="true" type="image" ghost="true" size="5 5 100%-5 100%-5"/>
			<!-- Health bar -->
			<object size="3 100%-7 100%-3 100%-2" name="formationEntityHealthSection[n]" ghost="true">
				<object size="0 0 100% 5" name="formationEntityHealth[n]" type="image" ghost="true">
					<object type="image" sprite="barBorder" ghost="true" size="-1 -1 100%+1 100%+1"/>
					<object type="image" sprite="healthBackground" ghost="true"/>
					<object type="image" sprite="healthForeground" ghost="true" name="formationEntityHealthBar[n]"/>
					<object type="image" sprite="statsBarShaderHorizontal" ghost="true"/>
				</object>
			</object>
		</object>
	</repeat>

</object>
